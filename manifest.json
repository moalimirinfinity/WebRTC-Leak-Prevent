{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "2.0.0",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "icons": {
    "16": "/img/icon16.png",
    "32": "/img/icon32.png",
    "48": "/img/icon48.png",
    "128": "/img/icon128.png"
  },
  "action": {
    "default_title": "__MSG_openOptions__",
    "default_icon": {
      "16": "/img/icon16.png",
      "32": "/img/icon32.png",
      "48": "/img/icon48.png",
      "128": "/img/icon128.png"
    },
    "default_popup": "/html/options.html"
  },
  "options_ui": {
    "page": "/html/options.html",
    "open_in_tab": false
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": ["storage", "privacy"],
  "host_permissions": [],
  "minimum_chrome_version": "88"
}
